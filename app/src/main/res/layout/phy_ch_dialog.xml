<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    >

    <Button
        android:id="@+id/chNotesBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/btnColor"
        android:fontFamily="@font/baloo_bhai_2_medium"
        android:text="Chapter notes"
        android:textSize="25sp"
        app:cornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/physicsChapterNoTv"
        app:rippleColor="@color/btnHoverColor" />

    <Button
        android:id="@+id/exerciseNotesBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:backgroundTint="@color/btnColor"
        android:fontFamily="@font/baloo_bhai_2_medium"
        android:text="Exercise notes"
        android:textSize="25sp"
        app:cornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chNotesBtn"
        app:rippleColor="@color/btnHoverColor" />


    <TextView
        android:id="@+id/physicsChapterNoTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chapter no"
        android:textSize="30sp"
        android:lineSpacingExtra="-15dp"
        android:fontFamily="@font/baloo_bhai_2_bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>